<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
  xmlns:stl="http://www.hforge.org/xml-namespaces/stl">

<div class="helpbox" stl:if="register">
  <img src="/ui/icons/48x48/help.png" class="helpbox-icon" />
  <div class="helpbox-text">
  If you don't have an account, enter your email address and check the
  checkbox below the password field. An email will be sent to you to confirm
  your registration.
  </div>
</div>
<form id="autoform" name="loginform" method="post" action=";login">
  <fieldset>
    <legend>Sign in</legend>
    <div>
      <label for="username">E-mail Address</label>
      <span class="field-is-missing" title="This field is required">*</span>
      <br/>
      <span stl:if="username/error" class="field-error">${username/error}
        <br/></span>
      <p class="widget">
        <input type="text" id="username" name="username"
          value="${username/value}" size="40" />
      </p>
    </div>
    <div>
      <label for="password">Password</label>
      <br/>
      <span stl:if="password/error" class="field-error">${password/error}
        <br/></span>
      <p class="widget">
        <input type="password" id="password" name="password" size="40" />
      </p>
    </div>
    <div>
      <input type="checkbox" id="no_password" name="no_password" value="1"
        onclick="disable_field(this, password)" />
      <label for="no_password">
      <stl:block stl:if="register">
      I don't have an account or I forgot my password.
      </stl:block>
      <stl:block stl:if="not register">
      I forgot my password.
      </stl:block>
      </label>
    </div>
    <p>
      <button type="submit" class="button-ok">Ok</button>
    </p>
  </fieldset>

  <script type="text/javascript">
    <stl:inline stl:if="not username/value">$("#username").focus();</stl:inline>
    <stl:inline stl:if="username/value">$("#password").focus();</stl:inline>
  </script>
</form>

</stl:block>
